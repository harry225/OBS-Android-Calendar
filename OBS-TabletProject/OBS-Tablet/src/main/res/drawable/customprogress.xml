<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Define the background properties like color etc -->
        <item android:id="@android:id/background">
            <shape>
                <corners android:radius="@dimen/progress_bar_corner_radius" />
                <solid android:color="@color/obsLightGray"/>

            </shape>
        </item>

        <!-- Define the progress properties like start color, end color etc -->
        <item android:id="@android:id/progress">
            <clip>
                <shape>
                    <corners android:radius="@dimen/progress_bar_corner_radius" />
                    <gradient
                            android:startColor="@color/obsProgressBarCurrent2"
                            android:centerColor="@color/obsProgressBarCurrent"
                            android:endColor="@color/obsProgressBarCurrent2"
                            android:angle="270"
                            />
                </shape>
            </clip>
        </item>

    </layer-list>