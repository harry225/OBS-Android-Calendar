<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/listitem_container"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@drawable/transparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/list_item_selector"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/accts_list_title_height">

            <TextView android:id="@+id/title"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/accts_list_title_width"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text="Title"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="6dp"
                android:layout_alignParentEnd="false"
                android:textSize="@dimen/accts_list_item_font_size" />

            <TextView android:id="@+id/val1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/accts_list_value_width"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text=""
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_toLeftOf="@+id/val2"
                android:textSize="@dimen/accts_list_item_font_size" />

            <TextView android:id="@+id/val2"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/accts_list_value_width"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text=""
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_toLeftOf="@+id/val3"
                android:textSize="@dimen/accts_list_item_font_size" />

            <TextView android:id="@+id/val3"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/accts_list_value_width"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text=""
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_toLeftOf="@+id/val4"
                android:textSize="@dimen/accts_list_item_font_size" />

            <TextView android:id="@+id/val4"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/accts_list_value_width"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text=""
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_toLeftOf="@+id/val5"
                android:textSize="@dimen/accts_list_item_font_size" />

            <TextView android:id="@+id/val5"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/accts_list_value_width"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text=""
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:layout_alignParentRight="false"
                android:layout_toLeftOf="@+id/arrow"
                android:textSize="@dimen/accts_list_item_font_size" />

            <TextView android:id="@+id/no_data"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:text="NO DATA REPORTED"
                android:singleLine="true"
                android:gravity="center_vertical|right"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:layout_alignParentRight="false"
                android:visibility="invisible"
                android:layout_toLeftOf="@+id/arrow"
                android:textSize="@dimen/accts_list_item_font_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrow"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/list_item_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
