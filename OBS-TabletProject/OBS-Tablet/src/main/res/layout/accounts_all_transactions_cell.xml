<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_cell"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFF"
    android:minHeight="34dp"
    android:longClickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/dateLabel"
        android:layout_weight="0.27"
        android:text="Date"
        android:maxLines="1"
        android:gravity="center_vertical|left"
        android:textAlignment="center"
        android:width="100dp"
        android:maxHeight="34dp"
        android:textSize="16dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/checkLabel"
        android:layout_weight="0.27"
        android:text="Check No"
        android:layout_toRightOf="@id/dateLabel"
        android:width="100dp"
        android:gravity="center_vertical|right"
        android:maxHeight="34dp"
        android:background="@drawable/transparent_button_selector"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/descriptionLabel"
        android:text="Description"
        android:layout_toRightOf="@id/checkLabel"
        android:gravity="center_vertical|left"
        android:textAlignment="center"
        android:maxLines="1"
        android:width="320dp"
        android:maxHeight="34dp"
        android:drawablePadding="6dp"
        android:textSize="16dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/extendedDescriptionLabel"
        android:layout_toRightOf="@id/checkLabel"
        android:gravity="center_vertical|left"
        android:textAlignment="center"
        android:maxLines="5"
        android:width="320dp"
        android:drawablePadding="6dp"
        android:textSize="16dp"
        android:paddingRight="6dp"
        android:paddingLeft="18dp"
        android:autoText="false"
        android:minHeight="34dp"
        android:layout_below="@+id/descriptionLabel"
        android:text="Oh hey there" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/creditLabel"
        android:layout_weight="0.27"
        android:layout_toRightOf="@id/descriptionLabel"
        android:gravity="center_vertical|right"
        android:text="Credit"
        android:maxLines="1"
        android:width="100dp"
        android:textAlignment="center"
        android:maxHeight="34dp"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/debitLabel"
        android:layout_toRightOf="@id/creditLabel"
        android:layout_weight="0.27"
        android:text="Debit Label"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:width="100dp"
        android:textAlignment="center"
        android:maxHeight="34dp"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/debitLabel"
        android:layout_height="34dp"
        android:id="@+id/balanceLabel"
        android:layout_weight="0.27"
        android:text="Balance Label"
        android:maxLines="1"
        android:width="100dp"
        android:gravity="center_vertical|right"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/expandImage"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/creditLabel"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignTop="@+id/descriptionLabel"
        android:scaleType="fitXY"
        android:src="@drawable/expand_cell_icon_up" />

</RelativeLayout>