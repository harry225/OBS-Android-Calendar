<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/listitem_container"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@drawable/transparent">

    <LinearLayout
        android:id="@+id/content_wrapper"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/list_item_bg_selected"
        android:padding="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView android:id="@+id/title"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="@dimen/accts_list_title_width"
            android:layout_height="@dimen/accts_list_title_height"
            android:textAlignment="gravity"
            android:text="Title"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="@dimen/accts_list_item_font_size" />

        <HorizontalScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/chart_holder"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

</RelativeLayout>