<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration_success"
    android:background="@color/obsLightGray"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/login_bg_white"
        android:gravity="center_horizontal"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/login_success"
            android:layout_marginTop="40dp" />

        <Button
            android:text="LAUNCH APP"
            android:id="@+id/launch_app_button"
            android:layout_width="162dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            style="@style/obsAccentButtonStyle" />

    </LinearLayout>

</RelativeLayout>