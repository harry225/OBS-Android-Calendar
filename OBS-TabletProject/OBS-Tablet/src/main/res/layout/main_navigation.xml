<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:background="@color/obsSecondary"
        android:adjustViewBounds="false" />
    

    <ImageView
        android:id="@+id/nav_highlighter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_highlighter"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        />

    <LinearLayout
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:layout_centerVertical="true"
        android:id="@+id/button_holder"
        android:paddingBottom="60dp"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/accounts_button_wrapper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/bank_sticker_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bank_sticker"
                android:layout_centerInParent="true"
                android:paddingBottom="20dp" />

            <ImageView
                android:id="@+id/accounts_alert"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/alert_indicator"/>
            <TextView
                android:id="@+id/ac_alert_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:text="1"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Accounts"
                android:id="@+id/accounts_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="0dp"
                android:textStyle="bold"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textSize="12dp"
                android:singleLine="true"
                android:background="@drawable/transparent_button_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/payments_button_wrapper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/credit_card_sticker"
                android:layout_centerInParent="true"
                android:paddingBottom="20dp" />

            <ImageView
                android:id="@+id/payments_alert"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/alert_indicator"/>
            <TextView
                android:id="@+id/pay_alert_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="1"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Payments"
                android:id="@+id/payments_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="0dp"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12dp"
                android:singleLine="true"
                android:background="@drawable/transparent_button_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/messages_button_wrapper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail_open_sticker"
                android:layout_centerInParent="true"
                android:paddingBottom="20dp" />
            <ImageView
                android:id="@+id/message_alert"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/alert_indicator"/>
            <TextView
                android:id="@+id/msg_alert_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="1"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="Messages"
                android:id="@+id/messages_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="0dp"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12dp"
                android:singleLine="true"
                android:background="@drawable/transparent_button_selector" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>