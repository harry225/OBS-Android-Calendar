<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="68dp"
    android:minHeight="34dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mar"
        android:id="@+id/month_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="30dp"
        android:height="34dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/obsAccent"
        android:typeface="normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/month_label"
        android:minHeight="34dp"
        android:maxHeight="34dp"
        android:maxWidth="30dp"
        android:minWidth="30dp"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:src="@drawable/calendar_icon"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:id="@+id/day_label"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:width="30dp"
        android:height="34dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignTop="@+id/calendar_view"
        android:layout_alignLeft="@+id/calendar_view"
        android:layout_alignRight="@+id/calendar_view"
        android:layout_alignBottom="@+id/calendar_view"
        android:maxWidth="30dp"
        android:minHeight="34dp"
        android:paddingTop="12dp"
        android:typeface="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024"
        android:id="@+id/year_label"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:width="40dp"
        android:height="34dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_toRightOf="@+id/calendar_view"
        android:layout_alignTop="@+id/month_label"
        android:textColor="@color/obsAccent"
        android:typeface="normal" />
</RelativeLayout>