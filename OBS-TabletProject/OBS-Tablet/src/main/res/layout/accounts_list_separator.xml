<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shadow_top_2"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:focusableInTouchMode="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />

    <TextView android:id="@+id/title"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="6dp"
        android:textSize="@dimen/accts_list_hdr_font_size"
        android:text="title"
        android:layout_marginLeft="20dp" />

    <TextView android:id="@+id/val1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="@dimen/accts_list_value_width"
        android:layout_height="fill_parent"
        android:textAlignment="gravity"
        android:text="Value"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_toLeftOf="@+id/val2"
        android:textSize="@dimen/accts_list_item_font_size"
        android:layout_marginLeft="20dp" />

    <TextView android:id="@+id/val2"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="@dimen/accts_list_value_width"
        android:layout_height="fill_parent"
        android:textAlignment="gravity"
        android:text="Value"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_toLeftOf="@+id/val3"
        android:textSize="@dimen/accts_list_hdr_font_size_2" />

    <TextView android:id="@+id/val3"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="@dimen/accts_list_value_width"
        android:layout_height="fill_parent"
        android:textAlignment="gravity"
        android:text="Value"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_toLeftOf="@+id/val4"
        android:textSize="@dimen/accts_list_hdr_font_size_2" />

    <TextView android:id="@+id/val4"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="@dimen/accts_list_value_width"
        android:layout_height="fill_parent"
        android:textAlignment="gravity"
        android:text="Value"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_toLeftOf="@+id/val5"
        android:textSize="@dimen/accts_list_hdr_font_size_2" />

    <TextView android:id="@+id/val5"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="@dimen/accts_list_value_width"
        android:layout_height="fill_parent"
        android:textAlignment="gravity"
        android:text="Value"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:layout_alignParentRight="false"
        android:textSize="@dimen/accts_list_hdr_font_size_2"
        android:layout_toLeftOf="@+id/arrow" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/list_item_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:visibility="invisible" />


</RelativeLayout>