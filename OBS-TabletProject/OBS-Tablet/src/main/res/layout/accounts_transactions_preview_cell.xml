<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_cell"
    android:layout_width="fill_parent"
    android:layout_height="34dp"
    android:orientation="horizontal"
    android:background="#FFF"
    android:minHeight="34dp"
    android:longClickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/dateLabel"
        android:layout_weight="0.27"
        android:text="Date"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:width="100dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/checkLabel"
        android:layout_weight="0.27"
        android:text="Check No"
        android:width="100dp"
        android:gravity="center_vertical|right"
        android:drawableLeft="@drawable/vert_divider_line"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:background="@drawable/transparent_button_selector"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/descriptionLabel"
        android:layout_weight="0.27"
        android:text="Description"
        android:maxLines="1"
        android:width="200dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/vert_divider_line"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/creditLabel"
        android:layout_weight="0.27"
        android:text="Credit"
        android:maxLines="1"
        android:width="100dp"
        android:gravity="center_vertical|right"
        android:drawableLeft="@drawable/vert_divider_line"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/debitLabel"
        android:layout_weight="0.27"
        android:text="Debit Label"
        android:maxLines="1"
        android:width="100dp"
        android:gravity="center_vertical|right"
        android:drawableLeft="@drawable/vert_divider_line"
        android:drawablePadding="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp" />
</LinearLayout>