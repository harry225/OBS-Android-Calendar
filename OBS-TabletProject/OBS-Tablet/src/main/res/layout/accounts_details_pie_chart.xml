<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/detail_piechart_container"
        android:layout_height="200dp"
        android:layout_width="200dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="NO DATA REPORTED"
        android:id="@+id/no_data_text"
        android:layout_gravity="right|bottom"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:textColor="@color/obsMediumGray"
        android:visibility="visible"
        android:layout_alignTop="@+id/detail_piechart_container"
        android:layout_alignLeft="@+id/detail_piechart_container" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@+id/detail_piechart_container"
        android:layout_alignTop="@+id/detail_piechart_container">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/legend_gridView"
            android:numColumns="2"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </GridView>

    </LinearLayout>

</RelativeLayout>