<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/obsRed"
    android:minHeight="44dp"
    android:id="@+id/alert_box_wrapper"
    >


    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-2dp"
        android:id="@+id/alertIcon"
        android:src="@drawable/alert_error"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="This is some test alert text"
        android:id="@+id/alertText"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/alertIcon"
        android:layout_alignTop="@+id/alertIcon"
        android:gravity="center_vertical|left" />

</LinearLayout>