<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obs.mobile_tablet.payments.FutureFragment">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/obs_progress_footer_btn">

        <TextView
            android:id="@+id/recent_payments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:text="RECENT PAYMENTS"/>

        <EditText
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="Search"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/recent_payments_text"
            android:background="@drawable/obs_payment_search_edit"/>

        <Button
            android:id="@+id/calendar_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="VIEW CALENDAR"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            style="@style/obsAccentButtonStyle"/>

        <Button
            android:id="@+id/all_status_btn"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/recent_payments_text"
            style="@style/obsAccentButtonStyle"
            android:text="ALL STATUSES"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#000000"
            android:layout_toRightOf="@id/all_status_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/recent_payments_text"/>

        <Button
            android:id="@+id/all_payments_btn"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/all_status_btn"
            android:layout_below="@id/recent_payments_text"
            style="@style/obsAccentButtonStyle"
            android:text="ALL PAYMENTS"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#000000"
            android:layout_toRightOf="@id/all_payments_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/recent_payments_text"/>

        <Button
            android:id="@+id/all_accounts_btn"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/all_payments_btn"
            android:layout_below="@id/recent_payments_text"
            style="@style/obsAccentButtonStyle"
            android:text="ALL ACCOUNTS"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#000000"
            android:layout_toRightOf="@id/all_accounts_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/recent_payments_text"/>

        <Button
            android:id="@+id/all_dates_btn"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/all_accounts_btn"
            android:layout_below="@id/recent_payments_text"
            style="@style/obsAccentButtonStyle"
            android:text="ALL DATES"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/pay_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="PAY DATE"/>

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/pay_date_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="TYPE"/>

            <TextView
                android:id="@+id/transid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/type_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="TRANS ID"/>

            <TextView
                android:id="@+id/recipient_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/transid_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="RECIPIENT"/>


            <TextView
                android:id="@+id/amount_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/recipient_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="75dp"
                android:text="AMOUNT"/>

            <TextView
                android:id="@+id/account_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/amount_payment_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="ACCOUNT"/>


            <TextView
                android:id="@+id/account_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/amount_payment_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="ACCOUNT"/>


            <TextView
                android:id="@+id/status_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/account_payment_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="200dp"
                android:text="STATUS"/>

            <TextView
                android:id="@+id/details_payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/status_payment_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="90dp"
                android:text="DETAILS"/>

            <ListView
                android:id="@+id/payments_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp">

            </ListView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
