<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:padding="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_reset_dialog_title"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            style="@style/resetPasswordDialogTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_reset_dialog_text"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            style="@style/resetPasswordDialogText" />

        <EditText
            android:id="@+id/reset_field"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/edittext_gray_border"
            android:maxLines="1"
            android:textSize="12sp" />

    </LinearLayout>
</FrameLayout>